  </head>

  <body>
    <% if user_signed_in? %>
      <span>
         <%= link_to current_user.name, current_user %>
      </span>
      <%= link_to '사용자 정보수정', edit_user_registration_path %>
      <%= link_to :로그아웃, destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to :로그인, new_user_session_path %>
    <% end %>

    <%= yield %>


