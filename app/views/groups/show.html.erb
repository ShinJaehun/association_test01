<p id="notice"><%= notice %></p>

<p>
  <strong>Group Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @group.description %>
</p>

<p>
  <strong>Group Users:</strong>
  <% @group.users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</p>

<% if !current_user.groups.include?(@group) %>
  <%= form_tag add_user_to_group_path(@group) do %>
    <button type="submit" class="btn btn-lg">Join</button>
  <% end %>
<% else %>
  <%= form_tag remove_user_from_group_path(@group) do %>
    <%= link_to "Leave", { action: 'remove_user_from_group' }, class: 'btn btn-lg', method: 'delete', data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>

<% if can? :manage, @group %>
  <%= link_to 'Edit', edit_group_path(@group) %> |
<% end %>
<%= link_to 'Back', groups_path %>

<p>
  <strong>Group Users Post</strong>
  <% @posts.each do |post| %>
    <li>
      <%= post.content %> by <%= post.user.name %>
    </li>
  <% end %>
</p>

<%= form_with model: Message.new do |form| %>
  <%= hidden_field_tag :type, 'group' %>
  <%= hidden_field_tag :receiver_id, @group.id %>

  <%= form.file_field :images, multiple: true %>
  <%= form.fields_for :post, Post.new do |post_form| %>
    <%= post_form.text_area :content %>
  <% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
