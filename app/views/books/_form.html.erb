<%= form_for(@book) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :contents %>
    <%= form.text_area :contents %>
  </div>

  <div class="field"%>
    <%= form.label :isbn %>
    <%= form.text_field :isbn %>
  </div>

  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_field :publisher %>
  </div>

  <%= form.fields_for :posts do |posts_field| %>
    <%= posts_field.hidden_field :user_id, value: current_user.id %>
    <%= posts_field.text_area :content %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
